<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/friend_item_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@mipmap/video_call_book_delete"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/friend_item_index"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/friend_item_sort"
        android:layout_margin="5dp"
        android:text="1"
        android:textColor="@color/takeout_item_sort_text"
        android:textSize="30px"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/friend_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="王小明"
            android:textColor="@color/takeout_item_sort_text"
            android:textSize="40px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/friend_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="13866668888"
            android:textColor="@color/takeout_item_sort_text"
            android:textSize="30px"
            android:gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/friend_item_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="45dp"
            android:background="@null"
            android:src="@mipmap/video_call_microphone" />

        <TextView
            android:id="@+id/friend_item_missed_call_count"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/friend_item_missed_call_count"
            android:gravity="center"
            android:text=""
            android:textColor="@color/takeout_item_sort_text"
            android:textSize="20sp"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>