<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/right">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/home_relativeLayout_margin_start">


        <LinearLayout
            android:id="@+id/line_dataView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/home_dataView_layout_marginTop">

            <com.idx.naboo.utils.DataView
                android:id="@+id/dataTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/home_DataView_textSize"/>

            <TextView
                android:id="@+id/holiday"
                android:layout_marginLeft="@dimen/home_holiday_marginLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_DataView_textSize"
                android:textColor="#ffffff" />

        </LinearLayout>


<RelativeLayout
    android:layout_alignParentRight="true"
    android:layout_width="@dimen/home_iphone_layout_width"
    android:layout_height="@dimen/home_iphone_layout_height"
    android:layout_marginTop="@dimen/home_dataView_layout_marginTop"
    android:layout_marginEnd="@dimen/home_ipone_layout_marginEnd">

    <ImageView
        android:id="@+id/iphone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/phone_icon" />

    <TextView
        android:id="@+id/iphone_num"
        android:layout_width="@dimen/miss_call_text_width_height"
        android:layout_height="@dimen/miss_call_text_width_height"
        android:layout_marginTop="@dimen/miss_call_text_margin_top_right"
        android:layout_marginRight="@dimen/miss_call_text_margin_top_right"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="gone"
        android:background="@drawable/friend_item_missed_call_count"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/miss_call_text_size"
        android:textColor="#fff"
        android:text=""/>
</RelativeLayout>

            <ImageView
                android:id="@+id/wifi_image"
                android:layout_marginTop="@dimen/home_dataView_layout_marginTop"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/home_iphone_layout_width"
                android:layout_height="@dimen/home_iphone_layout_height"
                android:layout_marginLeft="@dimen/home_message_marginLeft"
                android:layout_marginEnd="@dimen/home_message_layout_marginEnd"/>






        <com.idx.naboo.utils.TimeView
            android:id="@+id/timeView"
            android:layout_marginTop="@dimen/home_TimeView_layout_marginTop"
            android:layout_below="@id/line_dataView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/splash_timeView_textsize"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_below="@id/timeView"
            android:layout_marginTop="@dimen/home_weatherIcon_marginTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="@dimen/home_weatherIcon_layout_width"
                android:layout_height="@dimen/home_weatherIcon_layout_height" />

            <TextView
                android:layout_marginTop="@dimen/home_home_weather_tmp_marginTop"
                android:id="@+id/home_weather_tmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/home_home_weather_tmp_textSize"
                android:textColor="#ffffff" />

        </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>

