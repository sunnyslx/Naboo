<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/weather_recycleView_width"
    android:layout_height="@dimen/weather_recycleView_height"
    android:orientation="vertical">
    <TextView
        android:id="@+id/weather_tomorrow_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/2"
        android:textSize="@dimen/weather_list_date_textSize"
        android:layout_marginTop="@dimen/weather_list_date_marginTop"
        android:layout_gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/weather_tomorrow_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textSize="@dimen/weather_list_date_textSize"
        android:layout_marginTop="@dimen/weather_list_week_marginDate"
        android:layout_gravity="center"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/weather_tomorrow_icon"
        android:layout_width="@dimen/weather_list_icon_width"
        android:layout_height="@dimen/weather_list_icon_height"
        android:layout_marginTop="@dimen/weather_list_icon_marginWeek"
        android:layout_marginStart="@dimen/weather_list_icon_marginStart"
        android:layout_marginEnd="@dimen/weather_list_icon_marginStart"/>
    <TextView
        android:id="@+id/weather_tomorrow_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23℃ / 16℃"
        android:textSize="@dimen/weather_list_temp_textSize"
        android:layout_marginTop="@dimen/weather_list_tem_marginIcon"
        android:layout_gravity="center"
        android:textColor="@color/white"/>
</LinearLayout>