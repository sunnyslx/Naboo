<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/naboo_bg">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/naboo_bg"
            android:theme="@style/ToolbarTheme"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/line_account"
        android:layout_marginTop="@dimen/personal_center_line_account_margin_top"
        android:layout_marginStart="@dimen/personal_center_line_account_management_margin_start"
        android:layout_marginEnd="@dimen/personal_center_line_account_management_margin_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/appbarlayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="@dimen/personal_center_line_account_layout_height"
            android:layout_height="@dimen/personal_center_line_account_layout_height"
            android:background="@mipmap/user_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/personal_center_line_account_layout_height"
            android:layout_marginLeft="@dimen/personal_center_line_account_text_margin_left"
            android:textSize="@dimen/personal_center_line_account_textSize"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="账号 : "/>

        <TextView
            android:id="@+id/account_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/personal_center_line_account_layout_height"
            android:textColor="#ffffff"
            android:textSize="@dimen/personal_center_line_account_textSize"
            android:gravity="center" />
    </LinearLayout>




        <!--<Button-->
            <!--android:id="@+id/change_passWord"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:text="修改密码"/>-->
        <Button
            android:layout_marginTop="@dimen/personal_center_line_account_button_margin_top"
            android:id="@+id/log_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_cancel_shape"
            android:textSize="@dimen/personal_center_line_account_button_textSize"
            android:textColor="#007eff"
            android:layout_below="@+id/line_account"

    android:text="退出登录"/>


</RelativeLayout>
