<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/friend_8_delete_width"
    android:layout_height="@dimen/friend_8_delete_height"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/friend_name_and_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/friend_8_add_margin_top"
        android:text="王小明 13566667788"
        android:textSize="@dimen/takeout_2_food_detail_name_size"
        android:textColor="@color/friend_agree_and_reject"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="请求添加你为联系人"
        android:textSize="@dimen/takeout_2_food_detail_name_size"
        android:textColor="@color/friend_agree_and_reject"/>

    <LinearLayout
        android:layout_marginTop="@dimen/friend_8_delete_margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/friend_8_delete_margin_bottom">

        <Button
            android:id="@+id/agree"
            android:layout_width="@dimen/friend_8_delete_btn_width"
            android:layout_height="@dimen/friend_8_delete_btn_height"
            android:background="@drawable/friend_delete_bg"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="@dimen/takeout_1_base_text_size"/>

        <Button
            android:id="@+id/reject"
            android:layout_width="@dimen/friend_8_delete_btn_width"
            android:layout_height="@dimen/friend_8_delete_btn_height"
            android:layout_marginLeft="@dimen/friend_8_delete_btn_margin"
            android:background="@drawable/friend_cancel_bg"
            android:text="取消"
            android:textColor="#007eff"
            android:textSize="@dimen/takeout_1_base_text_size"/>
    </LinearLayout>
</LinearLayout>