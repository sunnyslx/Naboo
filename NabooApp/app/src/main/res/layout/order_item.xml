<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30px"
    android:layout_marginTop="30px"
    android:id="@+id/order_item"
    android:background="@drawable/item_order_shape">

    <TextView
        android:id="@+id/text_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="#FFFAFA"
        android:text="1"
        android:background="@drawable/shape_text_view"/>

    <TextView
        android:id="@+id/business"
        android:layout_toRightOf="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_height="50dp"
        android:text="麦当劳（清湖店）"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/order_pay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center|right"
        android:textSize="28sp"
        android:text="订单待支付"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/business"
        android:textColor="#ffffff"
        />

    <ImageView
        android:id="@+id/business_photo"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/text_id"
        android:background="@mipmap/img_seize"
        android:layout_below="@+id/business"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/pay_time"
        android:layout_toRightOf="@id/business_photo"
        android:layout_below="@id/business"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="2018/3/28(一) 12:20"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/business_number"
        android:layout_toRightOf="@id/business_photo"
        android:layout_below="@id/pay_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="麦鸡尊，共5件商品"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/pay_money"
        android:layout_toRightOf="@id/business_number"
        android:layout_below="@id/order_pay"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="28sp"
        android:layout_alignParentRight="true"
        android:gravity="center|right"
        android:text="¥ 120"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"/>


    <TextView
        android:layout_toRightOf="@id/pay_time"
        android:layout_below="@id/pay_money"
        android:layout_marginTop="12dp"
        android:id="@+id/pay_money_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="支付（剩余）"
        android:background="@drawable/pay_time_text"/>


</RelativeLayout>
