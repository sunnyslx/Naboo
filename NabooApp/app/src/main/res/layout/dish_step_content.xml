<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp">
    <RelativeLayout
        android:id="@+id/takeout_item_rl_1"
        android:layout_width="@dimen/dish_imageWidth"
        android:layout_height="@dimen/dish_imageHeight"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/step_image"
            android:layout_width="@dimen/video_image_width"
            android:layout_height="@dimen/video_image_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/step_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/g1_number_card"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/takeout_item_sort_text"
            android:textSize="@dimen/video_index_textSize" />
    </RelativeLayout>

    <TextView
        android:id="@+id/step_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/takeout_item_rl_1"
        android:text="内容"
        android:textSize="@dimen/dish_name_textSize"
        android:layout_marginStart="@dimen/dish_step_marginImage"
        android:textColor="@color/white"/>
</RelativeLayout>