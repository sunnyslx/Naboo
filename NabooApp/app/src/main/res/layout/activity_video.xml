<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idx.naboo.video.ui.VideoActivity"
    android:background="#212121">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/video_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/video_control_next"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/takeout_1_reply_margin_bottom"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/video_image_marginStart">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_voice"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/takeout_xiao_fu_reply"
            android:textSize="@dimen/takeout_1_base_text_size"
            android:textColor="#b3ffffff"
            android:layout_marginStart="@dimen/takeout_1_reply_text_margin_left"/>
    </LinearLayout>
</RelativeLayout>
